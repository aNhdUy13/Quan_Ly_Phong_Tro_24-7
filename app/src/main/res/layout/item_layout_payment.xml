<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        android:orientation="vertical"
        android:backgroundTint="#9A7237"
        android:layout_width="240dp"
        android:layout_height="260dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgShowNotePayment"
                android:elevation="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icon_note"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/imgUpdatePayment"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imgShowNotePayment"
                android:layout_marginRight="13dp"
                android:layout_marginTop="12dp"
                android:elevation="5dp"
                android:src="@drawable/update"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/imgDeletePayment"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imgUpdatePayment"
                android:layout_marginRight="13dp"
                android:layout_marginTop="12dp"
                android:elevation="5dp"
                android:src="@drawable/delete"
                android:layout_width="20dp"
                android:layout_height="20dp"/>


            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">
                    <ImageView
                        android:src="@drawable/icon_purchased"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/txtShowPaymentDate"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:text="Ngày Đóng Tiền"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtShowPaymentStatus"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="( Trạng Thái )"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="3">
                    <TextView
                        android:id="@+id/txtShowPaymentMoney"
                        android:background="@drawable/shape_frame"
                        android:padding="7dp"
                        android:gravity="center"
                        android:drawableLeft="@drawable/mini_icon_money"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:text="Số Tiền Đã Đóng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>